---
import '../styles/global.css';

type Props = {
  title?: string;
};

const { title } = Astro.props;
const name = 'Carlos A. Gomes';
const fullTitle = title ? `${title} | ${name}` : name;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{fullTitle}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      crossorigin="anonymous"
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;300;400;700&family=Source+Code+Pro:ital,wght@0,400;0,700;1,400&display=swap"
    />
  </head>
  <body>
    <slot />

    <div itemscope itemtype="http://schema.org/Person">
      <meta itemprop="gender" content="Male" />
      <meta itemprop="jobTitle" content="Frontend Engineer" />
      <meta itemprop="email" content="carlos.algms@gmail.com" />
      <meta itemprop="url" content="http://carlos-algms.github.io" />
      <meta itemprop="image" content="https://github.com/carlos-algms.png" />
      <span itemprop="name">
        <link
          itemprop="sameAs"
          href="https://www.linkedin.com/in/carlosalgms/"
        />
        <link itemprop="sameAs" href="https://twitter.com/carlos_algms" />
      </span>

      <footer>
        <div class="container mx-auto mt-5">
          <aside></aside>
          <aside>Powered by Astro</aside>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;

    font-family: 'Raleway', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
    font-display: swap;
    -wekbit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    --background: 0 0% 100%;
    --foreground: 240 5% 30%;

    @media (prefers-color-scheme: dark) {
      --background: 20 14.3% 4.1%;
      --foreground: 0 0% 95%;
    }

    color: hsl(var(--foreground));
  }

  /* Preferred box-sizing value */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Font smoothing */
  * {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* For images to not be able to exceed their container */
  img {
    max-width: 100%;
  }

  /* Removes spacing between cells in tables */
  table {
    border-collapse: collapse;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
